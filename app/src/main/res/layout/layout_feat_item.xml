<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/viewFeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:background="#80FFFFFF"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/btnFeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="FEAT TITLE - LEVEL     (COST)" />

        <LinearLayout
            android:id="@+id/infoFeat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Description"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Blinded_description"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/lblPrerequisites"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Prerequisites"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtPrerequisites"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Prerequisites"
                    android:textAllCaps="false"
                    android:textIsSelectable="true"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/lblFeatEffect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Effect"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txtFeatEffect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EFFECT..."
                    android:textSize="20sp" />

                <LinearLayout
                    android:id="@+id/specialFeat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/lblSpecial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Special"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/txtSpecial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SPECIAL..."
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>